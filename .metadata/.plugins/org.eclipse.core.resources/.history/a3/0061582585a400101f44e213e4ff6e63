package com.cp.workskillai.models;

import lombok.*;
import org.springframework.data.annotation.Id;
import org.springframework.data.mongodb.core.mapping.Document;

import jakarta.validation.constraints.*;
import java.util.List;

@Data
@NoArgsConstructor
@AllArgsConstructor
@Builder
@Document(collection = "students")
public class Student {

    @Id
    private String id;

    @NotBlank(message = "Full name is required")
    private String fullName;

    @Email(message = "Invalid email format")
    @NotBlank(message = "Email is required")
    private String email;

    @NotBlank(message = "Password is required")
    @Size(min = 6, message = "Password must be at least 6 characters")
    private String password;

    private String contactNumber;
    
    @NotBlank(message = "Department is required")
    private String department;

    private List<@NotBlank String> skills; // ["Java", "SQL", "Spring Boot"]

    private List<String> certifications; // ["AWS Certified", "Google Cloud"]

    private List<Education> education; // Education history

    private List<Experience> experience; // Work experience

    private String summary; // Professional summary

    private Double academicScore; // GPA / performance

    private List<String> enrolledCourses; // store course IDs or URLs

    // Resume management
    private List<ResumeHistory> resumeHistory; // Store multiple resume versions
    private String currentResumeId; // Reference to current active resume

    // Timestamps
    private String createdAt;
    private String updatedAt;
}

// Education sub-document
@Data
@NoArgsConstructor
@AllArgsConstructor
@Builder
class Education {
    @NotBlank(message = "Degree is required")
    private String degree;

    @NotBlank(message = "Institution is required")
    private String institution;

    private String year; // Can be "2020-2024" or "2024"
    
    private String location;
    private String grade; // GPA, percentage, etc.
}

// Experience sub-document
@Data
@NoArgsConstructor
@AllArgsConstructor
@Builder
class Experience {
    @NotBlank(message = "Position is required")
    private String position;

    @NotBlank(message = "Company is required")
    private String company;

    private String duration; // "2022-2023", "2 years", etc.
    
    private String description;
    private String location;
    private List<String> technologies; // Technologies used in this role
}

// Resume History sub-document
@Data
@NoArgsConstructor
@AllArgsConstructor
@Builder
class ResumeHistory {
    private String resumeId;
    private String fileName;
    private String uploadDate;
    private String analyzedDate;
    private Long fileSize;
    private String fileType; // PDF, DOCX, etc.
    
    // Extracted data snapshot
    private ResumeData extractedData;
}

// Resume Data snapshot
@Data
@NoArgsConstructor
@AllArgsConstructor
@Builder
class ResumeData {
    private String fullName;
    private String email;
    private String contactNumber;
    private List<String> skills;
    private List<String> certifications;
    private List<Education> education;
    private List<Experience> experience;
    private String summary;
}